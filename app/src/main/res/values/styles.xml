<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.MobileReg" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarItemBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="login_edittext_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">@dimen/textfields_height</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">left</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/edittext_click</item>
    </style>

    <style name="particulars_textview_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="login_textview_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="particulars_edittext_style">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:background">@drawable/edittext_click</item>
    </style>

    <style name="row_spacing_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="confirmation_textview_style">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="table_textview_style">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="buttons_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/buttons_click</item>
        <item name="android:textColor">#FFF</item>
    </style>
    
    <style name="buttons2_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/buttons2_click</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="confirmation_tablerow_style" parent="row_spacing_style">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="response_textview_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="stats_textview_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="large_linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="topbar_relativelayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">@dimen/frame_padding</item>
    </style>
    
    <style name="fidelity_headlogo_imageview_style">
        <item name="android:layout_width">450dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:src">@drawable/sigma_header</item>
    </style>
    
    <style name="topmenu_linearlayout_style">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/frame_padding</item>
    </style>
    
    <style name="left_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.33</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/frame_padding</item>
        <item name="android:paddingRight">@dimen/frame_padding</item>
    </style>
    
    <style name="console_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="logout_linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="logged_in_as_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_blue_color</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    
    <style name="logout_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/logout_button_shape_click</item>
        <item name="android:textColor">#FFF</item>        
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginLeft">@dimen/frame_padding</item>
    </style>
    
    <style name="leftlist_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/left_list_background</item>
        <item name="android:layout_marginBottom">@dimen/frame_padding</item>
        <item name="android:paddingLeft">@dimen/frame_padding</item>
        <item name="android:paddingRight">@dimen/frame_padding</item>
        <item name="android:paddingTop">@dimen/frame_padding</item>
    </style>
    
    <style name="right_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/frame_padding</item>
        <item name="android:layout_marginRight">@dimen/frame_padding</item>
        <item name="android:layout_weight">.67</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/frame_padding</item>
        <item name="android:paddingRight">@dimen/frame_padding</item>
        <item name="android:paddingTop">@dimen/frame_padding</item>
        <item name="android:background">@drawable/dark_blue_border</item>
    </style>

    <style name="fragment_table_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent_black_color</item>        
        <item name="android:padding">@dimen/frame_padding</item>
        
    </style>
    
    <style name="welcomeletter_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>        
    </style>
    
</resources>